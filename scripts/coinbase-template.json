//PUT _template/coinbase_eth_usd
{
  "index_patterns": [
    "coinbase_*"
  ],
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 0
  },
  "mappings": {
    "_doc": {
      "properties": {
        "price": {
          "type": "scaled_float",
          "scaling_factor": 100000000
        },
        "size": {
          "type": "scaled_float",
          "scaling_factor": 100000000
        },
        "best_ask": {
          "type": "scaled_float",
          "scaling_factor": 100000000
        },
        "best_bid": {
          "type": "scaled_float",
          "scaling_factor": 100000000
        },
        "side": {
          "type": "keyword",
          "ignore_above": 10
        },
        "ts": {
          "type": "date"
        }
      }
    }
  }
}
